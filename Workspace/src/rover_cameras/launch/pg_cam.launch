      <param name="frame_id" value="camera" />
      <param name="serial" value="12050579" />
    </node>
    <node pkg="nodelet" type="nodelet" name="image_proc_debayer"
          args="load image_proc/debayer camera_nodelet_manager">
    </node>

    <!-- <node name="dynamic_reconfigure_load" pkg="dynamic_reconfigure" type="dynparam" args="load camera_nodelet $(find rover_cameras)/cfg/cam1_firefly.yaml" /> -->
  </group>

</launch>
