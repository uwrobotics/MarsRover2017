<launch>
    <machine name="archieleepc" user="archie" address="192.168.3.10" env-loader="/home/archie/git/robotics/MarsRover2017/Workspace/devel/env.sh"/>

    <arg name="joy_config" default="xbox" />
    <arg name="joy_dev" default="/dev/input/by-id/usb-Â©Microsoft_Xbox_360_Wireless_Receiver_for_Windows_E0FBC730-joystick" />
    <arg name="config_filepath" default="$(find teleop_twist_joy)/config/$(arg joy_config).config.yaml" />

    <node machine="archieleepc" pkg="joy" type="joy_node" name="teleop_joy">
        <param name="dev" value="$(arg joy_dev)" />
        <param name="deadzone" value="0.3" />
        <param name="autorepeat_rate" value="20" />
    </node>

    <node machine="archieleepc" pkg="teleop_twist_joy" name="teleop_twist_joy" type="teleop_node">
        <rosparam command="load" file="$(arg config_filepath)" />
        <remap from="cmd_vel" to="teleop/cmd_vel"/>
    </node>
</launch>
